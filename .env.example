# ========================================
# CND² App Environment Variables
# ========================================
# Copy this file to .env.local and update values

# ----------------------------------------
# Core Configuration
# ----------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CND²
NEXT_PUBLIC_HASHTAG=#CNDxCnD

# ----------------------------------------
# Prairie Card API
# ----------------------------------------
PRAIRIE_CARD_BASE_URL=https://prairie-card.cloudnativedays.jp
PRAIRIE_API_TIMEOUT=10000

# ----------------------------------------
# OpenAI Configuration (Future Implementation)
# ----------------------------------------
# Required for real diagnosis generation
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
DIAGNOSIS_TIMEOUT=15000

# ----------------------------------------
# Database (Future Implementation)
# ----------------------------------------
# Required for result persistence
DATABASE_URL=

# ----------------------------------------
# Redis Cache (Future Implementation)
# ----------------------------------------
# Optional for distributed caching
REDIS_URL=

# ----------------------------------------
# Rate Limiting
# ----------------------------------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------
# Security
# ----------------------------------------
# Optional API key for protected endpoints
API_SECRET_KEY=
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ----------------------------------------
# Analytics & Monitoring
# ----------------------------------------
# Google Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Microsoft Clarity
NEXT_PUBLIC_CLARITY_ID=

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=

# ----------------------------------------
# Feature Flags
# ----------------------------------------
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false
ENABLE_CACHE=true

# ----------------------------------------
# Vercel (Auto-populated in Vercel deployments)
# ----------------------------------------
# VERCEL_URL=
# VERCEL_ENV=